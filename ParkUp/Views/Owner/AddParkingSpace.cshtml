@model ParkingSpaceViewModel
@{
    ViewData["Title"] = "Add a parking space";
}

<h1>Add a parking space</h1>

<div class="text-center">
    <div class="row">
        <div class="col-md-12">
            <form>
                <div id="citiesContainer">
                    <label for="citiesSelect">Select a city:</label>
                    <select name="citiesSelect" id="citiesSelect">
                        <option value="0">Select City...</option>
                    </select>
                </div>
                <div id="areasContainer">
                    <label for="areasSelect">Select an Area:</label>
                    <select name="areasSelect" asp-for="AreaId" id="areasSelect">
                        <option value="0">Select an Area...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="parkingSpaceName"></label>
                    <input type="text" asp-for="Name" id="parkingSpaceName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="streetName"></label>
                    <input type="text" asp-for="StreetName" id="streetName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="description"></label>
                    <input type="text" asp-for="Description" id="description" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="priceHour"></label>
                    <input type="number" asp-for="HourlyPrice" id="priceHour" class="form-control" />
                </div>
                <button id="submitNewParkingSpace" class="btn btn-primary">Submit Parking Space for Approval</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/owners.js"></script>
    <script type="module" src="~/js/utilsAPI.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}