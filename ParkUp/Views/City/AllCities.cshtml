@model List<CityViewModel>

@{
    ViewData["Title"] = "All cities";
}

<h1>All cities</h1>

<p>
    @foreach (var city in Model)
    {
        <span>@city.Name (@city.Id)</span>
    }
</p>

<a class="btn btn-outline-primary" asp-action="AddCity" asp-controller="City">Add City</a>

<hr />
<h3>via JS API</h3>
<p id="citiesContainer">

</p>

<div class="row">
    <div class="col-md-12">
        <form>
            <div class="form-group">
                <label for="cityName"></label>
                <input type="text" id="cityName" class="form-control" />
            </div>
            <button id="submitNewCity" class="btn btn-primary">Add City</button>
        </form>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/cities.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}